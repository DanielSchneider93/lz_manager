<h2>Bookmarks</h2>

<table>
  <% @group.each do |group| %>
    <tr>
      <td><%= group.title %></td>
      <td><%= link_to 'Show', group_path(group) %></td>
      <td><%= link_to 'Edit', edit_group_path(group) %></td>
      <td><%= link_to 'Delete', group_path(group),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Group', new_group_path %>
